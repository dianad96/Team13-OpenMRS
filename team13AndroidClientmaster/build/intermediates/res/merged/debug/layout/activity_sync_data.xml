<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SyncData">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mGoogleFitBtn"
        android:layout_marginTop="30dp"
        android:background="@color/dark_teal"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sync Google Fit"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mFitbitBtn"
        android:background="@color/dark_teal"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login to Fitbit"
        android:layout_below="@+id/mGoogleFitBtn"
        android:layout_toRightOf="@+id/output"
        android:layout_toEndOf="@+id/output"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/mFitbitLogout"
        android:background="#e11313"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logout from Fitbit"
        android:visibility="invisible"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:elevation="30dp"
        android:background="@color/white">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/sync_input"
            android:drawableTop="@drawable/input_green"
            android:textColor="@color/dark_teal"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="Input"
            android:focusable="true"
            android:background="@drawable/ripple_effect_menu"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/sync_graph"
            android:drawableTop="@drawable/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/ripple_effect_menu"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/sync_chat"
            android:drawableTop="@drawable/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/ripple_effect_menu"/>
    </LinearLayout>

